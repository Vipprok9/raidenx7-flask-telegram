<!doctype html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>RaidenX7 · Web ↔ Telegram</title>
  <style>
    :root {--bg:#0b1220;--fg:#e8eefc;--me:#3a86ff;--bot:#444;--muted:#8aa;--accent:#8ab4ff}
    body {margin:0;font-family:system-ui,Segoe UI,Roboto,sans-serif;background:var(--bg);color:var(--fg)}
    .wrap {max-width:520px;margin:auto;padding:20px}
    h1 {font-size:20px;margin:0 0 14px;text-align:center}
    #box {height:380px;overflow:auto;padding:10px;border:1px solid #2a2f3a;border-radius:12px;background:#0f1526}
    .msg {padding:9px 12px;margin:6px 0;border-radius:10px;max-width:85%;word-wrap:break-word}
    .me  {background:var(--me);color:#fff;margin-left:auto}
    .bot {background:var(--bot);color:#fff;margin-right:auto}
    .controls {display:flex;gap:10px;margin-top:10px}
    input {flex:1;padding:12px;border-radius:10px;border:1px solid #2a2f3a;background:#0f1526;color:var(--fg)}
    button {padding:12px 16px;border:none;border-radius:10px;background:var(--accent);color:#000;font-weight:700;cursor:pointer}
    .muted{color:var(--muted);font-size:12px;margin-top:6px;text-align:center}
  </style>
</head>
<body>
  <div class="wrap">
    <h1>Chat Web ↔ Telegram</h1>
    <div id="box"></div>
    <div class="controls">
      <input id="msg" placeholder="Nhập tin nhắn..." />
      <button id="send">Gửi</button>
    </div>
    <div class="muted">Trang sẽ tự cập nhật mỗi 2 giây • Nếu không thấy tin mới, thử reload.</div>
  </div>

  <script>
    const API = "https://raidenx7-bot.onrender.com/api/messages";
    const box = document.getElementById("box");
    const input = document.getElementById("msg");
    const sendBtn = document.getElementById("send");

    function add(side, text){
      const d = document.createElement("div");
      d.className = "msg " + side;
      d.textContent = text;
      box.appendChild(d);
      box.scrollTop = box.scrollHeight;
    }

    async function loadMessages(){
      try{
        const r = await fetch(API + "?t=" + Date.now(), {cache: "no-store"});
        const j = await r.json();
        box.innerHTML = "";
        (j.items || []).forEach(m => add(m.source === "web" ? "me" : "bot", m.text));
      }catch(e){ console.error(e); }
    }

    async function sendMsg(){
      const text = input.value.trim();
      if(!text) return;
      input.value = "";
      add("me", text); // hiển thị ngay
      try{
        await fetch(API, {
          method: "POST",
          headers: {"Content-Type":"application/json"},
          body: JSON.stringify({ text })
        });
      }catch(e){ add("bot", "Lỗi mạng, thử lại nhé."); }
    }

    sendBtn.onclick = sendMsg;
    input.addEventListener("keydown", e => { if(e.key === "Enter") sendMsg(); });

    loadMessages();
    setInterval(loadMessages, 2000);
  </script>
</body>
</html>
