<!doctype html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>RaidenX7 ¬∑ Web ‚Üî Telegram</title>
  <style>
    :root{--bg:#0b1220;--fg:#e8eefc;--card:#111a2b;--muted:#93a1c5;--me:#3962c4;--bot:#2a2f6b}
    .light{--bg:#f7f9fc;--fg:#0c1222;--card:#ffffff;--muted:#6f7a94;--me:#3b82f6;--bot:#1f3a8a}
    *{box-sizing:border-box} body{margin:0;background:var(--bg);color:var(--fg);font:16px/1.5 system-ui,Segoe UI,Roboto}
    .wrap{max-width:960px;margin:auto;padding:18px}
    h1{margin:6px 0 12px}
    .row{display:flex;gap:10px;align-items:center;justify-content:space-between}
    .badge{display:inline-flex;gap:6px;align-items:center;padding:6px 10px;border-radius:999px;background:rgba(255,255,255,.08)}
    .card{background:var(--card);border:1px solid rgba(255,255,255,.06);border-radius:14px;padding:16px;box-shadow:0 8px 24px rgba(0,0,0,.25)}
    .grid{display:grid;grid-template-columns:1fr;gap:16px}
    #box{height:380px;overflow:auto;border-radius:12px;background:rgba(255,255,255,.04);padding:10px}
    .msg{padding:10px 14px;border-radius:12px;margin:8px 0;max-width:85%;word-wrap:break-word}
    .me{background:var(--me);color:#fff;margin-left:auto}
    .bot{background:var(--bot);color:#fff;margin-right:auto}
    .controls{display:flex;gap:10px;margin-top:10px}
    input,select,button{padding:12px;border-radius:12px;border:1px solid rgba(255,255,255,.12);background:rgba(255,255,255,.06);color:var(--fg);outline:none}
    input{flex:1}
    button{cursor:pointer}
    .gallery{display:grid;grid-template-columns:repeat(4,1fr);gap:10px}
    .gallery img{width:100%;height:90px;object-fit:cover;border-radius:12px}
    .muted{color:var(--muted);font-size:14px}
    a{color:#8ab4ff;text-decoration:none}
  </style>
</head>
<body>
  <div class="wrap">

    <div class="row">
      <div class="badge">‚ö° Realtime Pull</div>
      <button id="theme" class="badge">ƒê·ªïi theme</button>
    </div>

    <div class="card">
      <h1>Web Chat ‚Üî <b>Telegram</b></h1>
      <div class="muted">Nh·∫≠p tin nh·∫Øn ·ªü d∆∞·ªõi ƒë·ªÉ g·ª≠i sang Telegram. Tr·∫£ l·ªùi b√™n Telegram s·∫Ω t·ª± hi·ªán l·∫°i ·ªü khung chat n√†y.</div>

      <div class="grid" style="margin-top:12px">
        <div class="card" style="background:transparent;border:none;padding:0">
          <div id="box"></div>
          <div class="controls">
            <input id="msg" placeholder="Nh·∫≠p tin nh·∫Øn..." />
            <button id="send">G·ª≠i</button>
          </div>
          <div class="muted" style="margin-top:6px">‚Ä¢ M·∫∑c ƒë·ªãnh d√πng <b>CHAT_ID</b> trong ENV. N·∫øu app b·∫°n l·∫•y chat_id ƒë·ªông th√¨ ch·ªâ c·∫ßn nh·∫Øn bot m·ªôt l·∫ßn tr√™n Telegram.</div>
        </div>

        <div class="card">
          <div class="badge">üñºÔ∏è Gallery</div>
          <div class="gallery" style="margin-top:10px">
            <img src="https://images.unsplash.com/photo-1550439062-609e1531270e?q=80&w=800&auto=format&fit=crop" alt="">
            <img src="https://images.unsplash.com/photo-1542751110-97427bbecf20?q=80&w=800&auto=format&fit=crop" alt="">
            <img src="https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80&w=800&auto=format&fit=crop" alt="">
            <img src="https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=800&auto=format&fit=crop" alt="">
          </div>
          <div class="muted">B·∫•m ·∫£nh ƒë·ªÉ xem l·ªõn (demo tƒ©nh).</div>
        </div>
      </div>
    </div>

    <div class="muted" style="margin-top:16px">¬© 2025 ¬∑ RaidenX7 ¬∑ Cloudflare Pages ‚Üî Render ‚Üî Telegram</div>
  </div>

  <script>
  // ------ c·∫•u h√¨nh backend: n·∫øu ƒëang ·ªü Render th√¨ d√πng ƒë∆∞·ªùng t∆∞∆°ng ƒë·ªëi, c√≤n ·ªü Pages th√¨ g·ªçi sang domain Render ------
  const BACKEND = location.hostname.endsWith("onrender.com") ? "" : "https://raidenx7-bot.onrender.com";

  // theme
  const body = document.body;
  document.getElementById('theme').onclick = () => body.classList.toggle('light');

  // elements
  const box = document.getElementById('box');
  const input = document.getElementById('msg');
  const sendBtn = document.getElementById('send');

  // helper th√™m bong b√≥ng
  function add(side, text){
    if(!text) return;
    const d = document.createElement('div');
    d.className = 'msg ' + side;
    d.textContent = text;
    box.appendChild(d);
    box.scrollTop = box.scrollHeight;
  }

  // g·ª≠i t·ª´ web ‚Üí Telegram
  async function send(){
    const text = (input.value || '').trim();
    if(!text) return;
    add('me', text);
    input.value = '';

    try{
      const r = await fetch(`${BACKEND}/api/send`, {
        method: 'POST',
        headers: {'Content-Type':'application/json'},
        body: JSON.stringify({ text })
      });
      const j = await r.json();
      if(!j.ok){
        add('bot', 'L·ªói g·ª≠i: ' + (j.error || 'unknown'));
      }
    }catch(e){
      add('bot', 'L·ªói m·∫°ng, th·ª≠ l·∫°i nh√©.');
    }
  }

  sendBtn.onclick = send;
  input.addEventListener('keydown', e => { if(e.key === 'Enter') send(); });

  // ---- Polling nh·∫≠n tin t·ª´ Telegram (server l∆∞u v√†o /api/messages) ----
  let lastTs = 0;
  async function pollMessages(){
    try{
      const url = lastTs ? `${BACKEND}/api/messages?since=${lastTs}` : `${BACKEND}/api/messages`;
      const res = await fetch(url);
      const data = await res.json();
      if(data.ok){
        lastTs = data.now || lastTs;
        (data.items || []).forEach(m => {
          if(m.source === 'telegram') add('bot', m.text);
        });
      }
    }catch(e){
      // b·ªè qua l·ªói
    }finally{
      setTimeout(pollMessages, 2000); // 2 gi√¢y 1 l·∫ßn
    }
  }
  pollMessages();
  </script>
</body>
</html>
