<!doctype html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>RaidenX7 · Web ↔ Telegram</title>
  <style>
    :root {--bg:#0b1220;--fg:#e8eefc;--me:#3a86ff;--bot:#444;--muted:#888}
    body {margin:0;font-family:sans-serif;background:var(--bg);color:var(--fg);}
    .wrap {max-width:480px;margin:auto;padding:20px}
    h1 {font-size:20px;text-align:center;margin:0 0 16px}
    #box {height:380px;overflow:auto;padding:10px;border:1px solid #333;
          border-radius:10px;background:#111}
    .msg {padding:8px 12px;margin:6px 0;border-radius:8px;max-width:80%}
    .me {background:var(--me);color:#fff;margin-left:auto}
    .bot {background:var(--bot);color:#fff;margin-right:auto}
    .controls {display:flex;gap:10px;margin-top:10px}
    input {flex:1;padding:10px;border-radius:8px;border:none}
    button {padding:10px 18px;border:none;border-radius:8px;
            background:#8ab4ff;color:#000;font-weight:bold;cursor:pointer}
  </style>
</head>
<body>
  <div class="wrap">
    <h1>Chat Web ↔ Telegram</h1>
    <div id="box"></div>
    <div class="controls">
      <input id="msg" placeholder="Nhập tin nhắn..." />
      <button onclick="sendMsg()">Gửi</button>
    </div>
  </div>

  <script>
    const API = "https://raidenx7-bot.onrender.com/api/messages";

    async function loadMessages() {
      try {
        const res = await fetch(API);
        const data = await res.json();
        const box = document.getElementById("box");
        box.innerHTML = "";
        data.items.forEach(msg => {
          const div = document.createElement("div");
          div.className = "msg " + (msg.source === "web" ? "me" : "bot");
          div.textContent = msg.text;
          box.appendChild(div);
        });
        box.scrollTop = box.scrollHeight; // auto scroll xuống cuối
      } catch (e) {
        console.error("Load lỗi", e);
      }
    }

    async function sendMsg() {
      const input = document.getElementById("msg");
      const text = input.value.trim();
      if (!text) return;
      await fetch(API, {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({text})
      });
      input.value = "";
      loadMessages();
    }

    // load ban đầu và refresh 2s/lần
    loadMessages();
    setInterval(loadMessages, 2000);
  </script>
</body>
</html>
